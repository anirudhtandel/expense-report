<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newlocationrow"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@drawable/greytablecell"
    android:orientation="horizontal"
    android:padding="0dp"
    android:weightSum="4" >

  

    <EditText
        android:id="@+id/location_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="0dp"
        
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spn_areatype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:nextFocusDown="@+id/spn_metrotype"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spn_metrotype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
         android:nextFocusDown="@+id/selected_checbox"
        android:textSize="12sp" />
    
    
      <CheckBox
        android:id="@+id/selected_checbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
       />

</LinearLayout>