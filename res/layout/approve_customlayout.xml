<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootcustomlayout"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/greytablecell"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="15.3" >

        <TextView
            android:id="@+id/Requestedby"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.98"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Requested By"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_gray"
            android:gravity="center_vertical" />
        
        
         <TextView
            android:id="@+id/Position"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.98"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Position"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_gray"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/Locationname"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.98"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Location name"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_gray"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/Areatype"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.98"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Area type"
            android:textColor="@color/Black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_gray"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/Metrotype"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.98"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Metro type"
            android:textColor="@color/Black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_gray"
            android:gravity="center_vertical" />

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="10dip"
            android:layout_weight="2.98"
            android:focusable="false"
            android:focusableInTouchMode="false" >
        </CheckBox>
    </LinearLayout>

</LinearLayout>