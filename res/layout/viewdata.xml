<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewlocation"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@drawable/greytablecell"
    android:orientation="horizontal"
    android:padding="0dp"
    android:weightSum="8.5" >

  

    <TextView
        android:id="@+id/view_location_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:layout_marginLeft="0dp"
		android:enabled="false"        
        android:textSize="16sp" />

    <TextView
        android:id="@+id/viewdata_areatype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_weight="2.5"
        android:nextFocusDown="@+id/viewdata_metrotype"
        android:enabled="false"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/viewdata_metrotype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
         android:nextFocusDown="@+id/viewdata_checbox"
         android:enabled="false"
        android:textSize="16sp" />
    
    
      <CheckBox
        android:id="@+id/viewdata_checbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
       />

</LinearLayout>