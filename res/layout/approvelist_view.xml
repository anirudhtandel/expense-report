<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/approveview_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e8e8e8"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#e8e8e8"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:padding="0dp" >

        <Button
            android:id="@+id/Selectall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT ALL" />

        <Button
            android:id="@+id/approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPROVE" />

        <Button
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REJECT" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#e8e8e8"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="16" >
        
        
         <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.98"
            android:gravity="center"
            android:padding="10dp"
            android:text="Requested By"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_blue" />
        
        
         <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.98"
            android:gravity="center"
            android:padding="10dp"
            android:text="Position"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.98"
            android:gravity="center"
            android:padding="10dp"
            android:text="NAME"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.98"
            android:gravity="center"
            android:padding="10dp"
            android:text="AREA TYPE"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.98"
            android:gravity="center"
            android:padding="10dp"
            android:text="METRO TYPE"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/drimage2"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_weight="0.02"
            android:background="@drawable/seperator_blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.98"
            android:gravity="center"
            android:padding="10dp"
            android:text="SELECT"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/my_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#ffffff"
        android:drawSelectorOnTop="false" >
    </ListView>

</LinearLayout>