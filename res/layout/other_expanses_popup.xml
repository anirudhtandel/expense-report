<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="322dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="#e2e2e2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/spnothertype"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtotheramount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount in Ruppees"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialogbuttonyes"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginLeft="17px"
            android:layout_marginRight="8px"
            android:gravity="center_vertical|center_horizontal"
            android:text="Ok" />

        <Button
            android:id="@+id/dialogbuttonno"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1px"
            android:layout_marginRight="17px"
            android:gravity="center_vertical|center_horizontal"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>