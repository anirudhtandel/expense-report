<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GreatRepTitleBar" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/app_titlebar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/TitlebarBackground</item>
        <item name="android:windowBackground">@drawable/app_bgcolor</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
        <item name="android:textColorTertiary">@color/primary_text</item>
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:editTextStyle">@style/edittext</item>
        <item name="android:spinnerStyle">@style/dropdown</item>
        <item name="android:listViewStyle">@style/list</item>
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:textAppearance">@style/text</item>
    </style>

    <style name="GreatRepNoTitleFullScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/app_bgcolor</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
        <item name="android:textColorTertiary">@color/primary_text</item>
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:editTextStyle">@style/edittext</item>
        <item name="android:spinnerStyle">@style/dropdown</item>
        <item name="android:listViewStyle">@style/list</item>
        <item name="android:textAppearance">@style/text</item>
    </style>

</resources>