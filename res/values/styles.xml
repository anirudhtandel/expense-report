<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitlebarBackground">
        <item name="android:background">@drawable/greatrep_titlebar_bg</item>
    </style>

    <style name="tabs">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/icon</item>
    </style>

    <style name="buttons" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/gretrep_btn_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="edittext" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/greatrep_edittext</item>
    </style>

    <style name="dropdown" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/greatrep_dropdown</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="list" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_item_bg</item>
        <item name="android:cacheColorHint">?android:attr/colorBackgroundCacheHint</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="text" parent="@android:style/Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_color_4f4f4f</item>
    </style>

</resources>